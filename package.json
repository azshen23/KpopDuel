{
  "name": "kpopduel",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:client": "bun run --cwd apps/client start",
    "dev:server": "bun run --cwd apps/server dev",
    "dev": "concurrently \"bun run dev:server\" \"bun run dev:client\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  }
}